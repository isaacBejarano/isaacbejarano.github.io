{
  "name": "p3",
  "version": "3.0.0",
  "description": "HTML-CSS-P3",
  "source": [
    "*.html",
    "css/*",
    "img/*"
  ],
  "author": "Isaac Bejarano",
  "license": "ISC",
  "scripts": {
    "parcel:dev": "parcel",
    "parcel:dist": "parcel build --dist-dir dist --public-url ./uoc-html-css-p3.github.io/post.html --no-content-hash --no-optimize --no-source-maps --no-cache",
    "clean": "rimraf dist docs .parcel-cache",
    "start": "npm-run-all clean parcel:dev",
    "build": "npm-run-all clean parcel:dist"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "parcel": "^2.13.3",
    "postcss": "^8.4.49",
    "postcss-custom-properties": "^14.0.4",
    "postcss-nesting": "^13.0.1",
    "rimraf": "^6.0.1",
    "svgo": "^3.3.2"
  }
}
